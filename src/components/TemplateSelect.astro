---
// TemplateSelect component - allows selecting and managing templates
---

<div class="template-section bg-white rounded-lg shadow-md p-6 mb-6">
  <h2 class="text-xl font-bold mb-4 text-gray-800">Template</h2>

  <div class="mb-4">
    <label for="template-select" class="block text-sm font-medium text-gray-700 mb-2">
      Seleziona template
    </label>
    <select
      id="template-select"
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
    >
      <!-- Options populated by JavaScript -->
    </select>
  </div>

  <div class="flex gap-2 mb-4">
    <button
      id="new-template-btn"
      class="px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors"
    >
      + Nuovo
    </button>
    <button
      id="edit-template-btn"
      class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors"
    >
      Modifica
    </button>
    <button
      id="delete-template-btn"
      class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors"
    >
      Elimina
    </button>
  </div>

  <div class="flex gap-2">
    <button
      id="export-templates-btn"
      class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition-colors text-sm"
    >
      Esporta
    </button>
    <label
      for="import-templates-input"
      class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition-colors text-sm cursor-pointer"
    >
      Importa
      <input
        type="file"
        id="import-templates-input"
        accept=".json"
        class="hidden"
      />
    </label>
  </div>

  <!-- Template editor modal -->
  <div id="template-editor-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 p-4">
    <div class="bg-white rounded-lg p-6 max-w-2xl w-full max-h-[90vh] overflow-y-auto">
      <h3 id="editor-title" class="text-lg font-bold mb-4">Modifica Template</h3>

      <div class="mb-4">
        <label for="template-name" class="block text-sm font-medium text-gray-700 mb-2">
          Nome template
        </label>
        <input
          type="text"
          id="template-name"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
          placeholder="Es: Semplice"
        />
      </div>

      <div class="mb-4">
        <label for="template-content" class="block text-sm font-medium text-gray-700 mb-2">
          Contenuto template
        </label>
        <textarea
          id="template-content"
          rows="8"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 font-mono text-sm"
          placeholder="Usa {title}, {text}, {url} come segnaposto"
        ></textarea>
        <p class="text-xs text-gray-500 mt-1">
          Segnaposto disponibili: <code>&#123;title&#125;</code>, <code>&#123;text&#125;</code>, <code>&#123;url&#125;</code>
        </p>
      </div>

      <div class="flex gap-2 justify-end">
        <button
          id="cancel-editor-btn"
          class="px-4 py-2 bg-gray-300 text-gray-800 rounded-lg hover:bg-gray-400 transition-colors"
        >
          Annulla
        </button>
        <button
          id="save-template-btn"
          class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors"
        >
          Salva
        </button>
      </div>
    </div>
  </div>
</div>
