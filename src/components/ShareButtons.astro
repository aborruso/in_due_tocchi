---
// ShareButtons component - data input section only (buttons moved to sticky footer)
---

<!-- Data input section (for debugging/manual entry) -->
<div class="input-section bg-white rounded-lg shadow-md p-6">
  <h2 class="text-xl font-bold mb-4 text-gray-800">Dati in Ingresso</h2>

  <div class="space-y-4">
    <div>
      <label for="input-title" class="block text-sm font-medium text-gray-700 mb-1">
        Titolo
      </label>
      <input
        type="text"
        id="input-title"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
        placeholder="Titolo del contenuto"
      />
    </div>

    <div>
      <label for="input-text" class="block text-sm font-medium text-gray-700 mb-1">
        Testo
      </label>
      <textarea
        id="input-text"
        rows="3"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
        placeholder="Testo o descrizione"
      ></textarea>
    </div>

    <div>
      <label for="input-url" class="block text-sm font-medium text-gray-700 mb-1">
        URL
      </label>
      <input
        type="url"
        id="input-url"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500"
        placeholder="https://esempio.it"
      />
    </div>
  </div>
</div>
